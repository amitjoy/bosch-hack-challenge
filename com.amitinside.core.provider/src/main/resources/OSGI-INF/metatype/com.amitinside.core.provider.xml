<?xml version="1.0" encoding="UTF-8"?>

<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0"
	localization="en_us">
	<OCD id="com.amitinside.core.provider" name="Pollution Data Publisher"
		description="Subscription Topic configuration">

		<Icon
			resource="http://icons.iconarchive.com/icons/oxygen-icons.org/oxygen/128/Status-weather-clouds-icon.png"
			size="32" />

		<AD id="pollution.data.mqtt.topic" name="MQTT Topic to pusblish data"
			type="String" cardinality="0" required="true" default="pollution/data"
			description="Configurable property to set MQTT Topic to publish Pollution Data" />
		
		<AD id="pollution.data.rate" name="Data Publish Rate"
			type="Integer" cardinality="0" required="true" default="2"
			description="Configurable property to set data publish rate (in seconds)" />

	</OCD>
	<Designate pid="com.amitinside.core.provider">
		<Object ocdref="com.amitinside.core.provider" />
	</Designate>
</MetaData>